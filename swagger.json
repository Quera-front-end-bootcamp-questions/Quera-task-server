  "paths": {
    "/users/{id}": {
      "put": {
        "tags": ["User"],
        "summary": "Update a user by ID",
        "description": "Updates the information of a user specified by their ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the user",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "user",
            "in": "body",
            "description": "User object containing updated information",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/UserUpdateRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserUpdateResponse"
                }
              }
            }
          },
          "403": {
            "description": "You don't have access to change data of another user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/users/{usernameOrId}": {
      "get": {
        "tags": ["User"],
        "summary": "Get user by username or ID",
        "parameters": [
          {
            "in": "path",
            "name": "usernameOrId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Username or ID of the user"
          }
        ],
        "responses": {
          "200": {
            "description": "User retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Register a new user",
        "description": "Registers a new user with the provided information",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
